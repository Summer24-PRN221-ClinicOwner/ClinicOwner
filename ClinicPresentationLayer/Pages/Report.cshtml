@page
@model ClinicPresentationLayer.Pages.ReportModel
@{
    ViewData["Title"] = "Create Report";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- CKEditor CDN -->
    <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>
</head>
<body>
    <h1>Create Report</h1>

    <form method="post">
        <div>
            <label asp-for="Report.Name"></label>
            <input asp-for="Report.Name" />
        </div>
        <div>
            <label asp-for="Report.Data"></label>
            <textarea asp-for="Report.Data" id="editor"></textarea>
        </div>
        
        <button type="submit">Save</button>
    </form>

    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
</body>
</html>