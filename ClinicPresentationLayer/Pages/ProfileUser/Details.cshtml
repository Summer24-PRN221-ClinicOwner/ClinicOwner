@page
@model ClinicPresentationLayer.Pages.ProfileUser.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Role)
        </dd>
        @if (Model.User.Role == 2)
            {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Phone)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Address)
        </dd>
        }
        @if (Model.User.Role == 1)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dentist.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dentist.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dentist.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dentist.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dentist.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dentist.Email)
            </dd>
        }
        @if (Model.User.Role == 0)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClinicOwner.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClinicOwner.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClinicOwner.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClinicOwner.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClinicOwner.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClinicOwner.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClinicOwner.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClinicOwner.Address)
            </dd>
        }
    </dl>
    @if (Model.User.Role == 1)
    {
        <h3>Services Offered</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Service Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.Dentist.Services)
                {
                    <tr>
                        <td>@service.Name</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.CurrentAccount.Role == 0)
        {
            <a href="/DentistServices/Index?id=@Model.Dentist.Id" class="btn btn-primary">Assign Services</a>
        }
    }
    @if (Model.User.Role == 1)
    {
        <h3>Licenses</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>License Type</th>
                    <th>License Number</th>
                    <th>Issue Date</th>
                    <th>Expire Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var license in Model.Dentist.Licenses)
                {
                    <tr>
                        <td>@license.LicenceType</td>
                        <td>@license.LicenseNumber</td>
                        <td>@license.IssueDate?.ToString("yyyy-MM-dd")</td>
                        <td>@license.ExpireDate?.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
        if (@Model.CurrentAccount.Id == @Model.User.Id)
        {
            <a href="/DentistLicense/Index?id=@Model.Dentist.Id" class="btn btn-primary">Manage Licenses</a>

        }
    }


</div>

<div>
    @if (@Model.CurrentAccount.Id == @Model.User.Id)
    {
        <a style="margin-top: 5px" asp-page="./Edit" asp-route-id="@Model.User.Id">Edit</a>
    }
    @* <a asp-page="./Index">Back to List</a> *@
</div>