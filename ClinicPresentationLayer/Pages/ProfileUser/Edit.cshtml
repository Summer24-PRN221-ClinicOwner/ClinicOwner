                <input type="hidden" asp-for="Dentist.ClinicId" />
                <div class="form-group">
                    <label asp-for="Dentist.Name" class="control-label"></label>
                    <input asp-for="Dentist.Name" class="form-control" />
                    <span asp-validation-for="Dentist.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dentist.Phone" class="control-label"></label>
                    <input asp-for="Dentist.Phone" class="form-control" />
                    <span asp-validation-for="Dentist.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dentist.Email" class="control-label"></label>
                    <input asp-for="Dentist.Email" class="form-control" />
                    <span asp-validation-for="Dentist.Email" class="text-danger"></span>
                </div>
            }
            @if (Model.User.Role == 0)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ClinicOwner.Id" />
                <div class="form-group">
                    <label asp-for="ClinicOwner.Name" class="control-label"></label>
                    <input asp-for="ClinicOwner.Name" class="form-control" />
                    <span asp-validation-for="ClinicOwner.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClinicOwner.Phone" class="control-label"></label>
                    <input id="phone" maxlength="10" ClinicOwner.Phone" class="form-control" />
                    <span asp-validation-for="ClinicOwner.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClinicOwner.Email" class="control-label"></label>
                    <input asp-for="ClinicOwner.Email" class="form-control" />
                    <span asp-validation-for="ClinicOwner.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClinicOwner.Address" class="control-label"></label>
                    <input asp-for="ClinicOwner.Address" class="form-control" />
                    <span asp-validation-for="ClinicOwner.Address" class="text-danger"></span>
                </div>
            }
                <div class="form-group">
                    <label asp-for="User.Role" class="control-label"></label>
                    <input asp-for="User.Role" class="form-control" readonly/>
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Status" class="control-label"></label>
                <input asp-for="User.Status" class="form-control" readonly />
                <span asp-validation-for="User.Status" class="text-danger"></span>
                </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
