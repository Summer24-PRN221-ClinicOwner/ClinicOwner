@page
@model ClinicPresentationLayer.Pages.DentistLicense.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>License</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="License.LicenseNumber" class="control-label"></label>
                <input asp-for="License.LicenseNumber" class="form-control" />
                <span asp-validation-for="License.LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="License.IssueDate" class="control-label"></label>
                <input asp-for="License.IssueDate" class="form-control" />
                <span asp-validation-for="License.IssueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="License.ExpireDate" class="control-label"></label>
                <input asp-for="License.ExpireDate" class="form-control" />
                <span asp-validation-for="License.ExpireDate" class="text-danger"></span>
            </div>
            <input type="hidden" value="@Model.DentistId" name="DentistId" class="btn btn-primary" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/DentistLicense/Index?id=@Model.DentistId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
