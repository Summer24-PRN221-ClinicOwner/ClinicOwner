@page
@model ClinicPresentationLayer.Pages.LoginModel
@{
}
<body class="auth">
    <div id="main-wrapper" class="show">

        <!-- start section login tabib -->
        <div class="login-tabib">
            <div>
                <div class="text-center">
                    <a class="logo" href="index.html">
                        <img class="img-fluid" src="~/images/logo.png" alt="login page">
                    </a>
                </div>
                <div class="login-main">
                    <form class="theme-form" method="post">
                        <h4>Sign in to account</h4>
                        <p>Enter your username & password to login </p>
                        <div class="form-group m-b-10">
                            <label asp-for="Username" class="col-form-label"></label>
                            <input asp-for="Username" class="form-control" type="text" placeholder="Username">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group m-b-10">
                            <label asp-for="Password" class="col-form-label"></label>
                            <div class="form-input position-relative">
                                <input asp-for="Password" class="form-control" type="password" placeholder="*********">
                                <div class="show-hide"><span class="show"></span></div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-0">
                            <div class="checkbox p-0">
                                <input asp-for="RememberMe" id="checkbox1" type="checkbox">
                                <label class="text-muted" for="checkbox1">Remember password</label>
                            </div>
                            <a class="link text-primary" href="page-forgot-password.html">Forgot password?</a>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary w-100">Sign in</button>
                            </div>
                        </div>
                        <p class="mt-4 mb-0">
                            Don't have an account?
                            <a class="ms-2 text-primary text-center" asp-page="/Register">
                                Create Account
                            </a>
                        </p>
                    </form>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

