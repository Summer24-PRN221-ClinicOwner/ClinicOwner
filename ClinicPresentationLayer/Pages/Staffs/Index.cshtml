@page
@model ClinicPresentationLayer.Pages.Staffs.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="#" id="create-new-dentist-link">Create New Staff</a>
</p>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            @* <th>Action</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staffs)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Username</td>
                <td>@item.Password</td>
                @* <td>|
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td> *@
            </tr>
        }
        <form id="create-dentist-form" method="post">
        <tr id="create-dentist-row" style="display:none;">
            <td></td>
            <td>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a href="#" id="cancel-create-dentist-link" class="btn btn-secondary">Cancel</a>
                </div>
            </td>
        </tr>
        </form>

    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("create-new-dentist-link").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("create-dentist-row").style.display = "table-row";
        });

        document.getElementById("cancel-create-dentist-link").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("create-dentist-row").style.display = "none";
        });
    </script>
}