@page
@model ClinicPresentationLayer.Pages.Dentists.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Dentist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Dentist.Name</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Dentist.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Dentist.Email</dd>

        <dt class="col-sm-2">Clinic</dt>
        <dd class="col-sm-10">@Model.Dentist.Clinic?.Name</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Dentist.IdNavigation?.Username</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Dentist.IdNavigation?.Status</dd>
    </dl>

    <form method="post">
        <input type="hidden" name="Id" value="@Model.Dentist.Id" />
