@page
@model ClinicPresentationLayer.Pages.Room.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.Id" />
            <input asp-for="Room.ClinicId" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Room.Clinic.Name" class="control-label"></label>
                <select asp-for="Room.ClinicId" class="form-control" asp-items="ViewBag.ClinicId" disabled></select>

            </div>
            <div class="form-group">
                <label asp-for="Room.RoomNumber" class="control-label"></label>
                <input asp-for="Room.RoomNumber" class="form-control" />
                <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Status" class="control-label"></label>
                <select asp-for="Room.Status" class="form-control">
                    <option value="1">Closed</option>
                    <option value="0">Open</option>
                </select>
                <span asp-validation-for="Room.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
