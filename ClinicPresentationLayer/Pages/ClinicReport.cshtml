@page
@model ClinicPresentationLayer.Pages.ClinicReportModel
@{
}

<h1>Clinic Report</h1>


<div class="row">
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Appointment
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAppointment</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Annual) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Today Appointment
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalTodayAppoinemt</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Requests Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                           Tomorrow Appointment
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalTomorrowAppointment</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Earning Today
                        </div>
                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.TotalEarnToday.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




    

<form method="post">
    @if (Model.ModelState.Any(state => state.Value.Errors.Count > 0))
    {
        <div class="alert alert-danger" role="alert">
            Please enter valid dates for the report.
        </div>
    }
    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="date" class="form-control" id="startDate" name="startDate" asp-for="StartDate" required min="2024-01-01" max="2025-12-31">
    </div>
    <div class="form-group">
        <label for="endDate">End Date:</label>
        <input type="date" class="form-control" id="endDate" name="endDate" asp-for="EndDate" required min="2024-01-01" max="2025-12-31">
    </div>
    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>

@if (Model.ReportData != null && Model.ReportData.Any())
{
    <h2>Report Details</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Total Appointments</th>
                <th>Most Appointments (Dentist)</th>
                <th>Least Appointments (Dentist)</th>
                <th>Most Appointments (Service)</th>
                <th>Least Appointments (Service)</th>
                <th>Total Revenue</th>
                <th>Revenue Per Appointment</th>
                <th>Revenue Per Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reportItem in Model.ReportData)
            {
                <tr class="@(reportItem == Model.ReportData.Last() ? "table-success" : "")">
                    <td>@reportItem.Date?.ToString("dd-MM-yyyy")</td>
                    <td>@reportItem.TotalAppointment</td>
                    <td>
                        <h6>@reportItem.MostAppointmentAmountOfDentist Appointment(s)</h6>
                        <ul>
                            @foreach (var dentist in reportItem.MostAppointmentDentist)
                            {
                                <li>@dentist.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <h6>@reportItem.LeastAppointmentAmountOfDentist Appointment(s)</h6>
                        <ul>
                            @foreach (var dentist in reportItem.LeastAppointmentDentist)
                            {
                                <li>@dentist.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <h6>@reportItem.MostAppointmentAmountOfService Appointment(s)</h6>
                        <ul>
                            @foreach (var service in reportItem.MostPopularService)
                            {
                                <li>@service.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <h6>@reportItem.LeastAppointmentAmountOfService Appointment(s)</h6>
                        <ul>
                            @foreach (var service in reportItem.LeastPopularService)
                            {
                                <li>@service.Name</li>
                            }
                        </ul>
                    </td>
                    <td>@reportItem.TotalRevenue</td>
                    <td>@reportItem.RevenuePerAppointment</td>
                    <td>@reportItem.RevenuePerCustomer</td>
                </tr>
            }
        </tbody>
    </table>
    
}
