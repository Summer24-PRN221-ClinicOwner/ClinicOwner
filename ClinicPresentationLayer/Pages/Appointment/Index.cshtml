@page
@model ClinicPresentationLayer.Pages.Appointment.IndexModel

@{
    ViewData["Title"] = "Index";
    var schedule = new string[8, 4];

    // Hardcoding the schedule data
    schedule[0, 0] = "Mr. A\nNhổ răng khôn";
    schedule[2, 2] = "Mr. B\nLàm trắng răng";
    schedule[4, 1] = "Mr. C\nNhổ răng thường";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].StartSlot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].EndSlot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Dentist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Appointment)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartSlot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndSlot)
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.Room.Id) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dentist.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Id)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
