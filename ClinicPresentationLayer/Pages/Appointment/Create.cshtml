@page
@model ClinicPresentationLayer.Pages.Appointment.CreateModel

@{
    // ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicPresentationLayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClinicPresentationLayer.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<body>
    <div id="main-wrapper" class="show">
        <h1>Create</h1>

        <h4>Appointment</h4>
        <hr />
        <div class="row">
            <!-- Form 1: Basic Appointment Details -->
            <form id="form1" method="post" asp-page-handler="SubmitBasic">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Appointment.AppointDate" class="control-label"></label>
                    <input type="date" asp-for="Appointment.AppointDate" class="form-control" />
                    <span asp-validation-for="Appointment.AppointDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Appointment.StartSlot" class="control-label"></label>
                    <select asp-for="Appointment.StartSlot" class="form-control" asp-items="ViewBag.StartSlot"></select>
                    <span asp-validation-for="Appointment.StartSlot" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Appointment.ServiceId" class="control-label"></label>
                    <select asp-for="Appointment.ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Next</button>
                </div>
            </form>

            <!-- Form 2: Complete Appointment Details -->
            @if(Model.ShowDentistForm)
            {
                <form id="form2" method="post" asp-page-handler="SubmitComplete">
                    <input type="hidden" asp-for="Appointment.AppointDate" />
                    <input type="hidden" asp-for="Appointment.StartSlot" />
                    <input type="hidden" asp-for="Appointment.ServiceId" />
                    <div class="form-group">
                        <label asp-for="Appointment.DentistId" class="control-label"></label>
                        <select asp-for="Appointment.DentistId" class="form-control" asp-items="ViewBag.DentistId"></select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit Appointment</button>
                    </div>
                </form>
            }
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


